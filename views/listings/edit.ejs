<% layout("layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3 class="mt-3">Edit listing</h3>
                <form method="post" action="/listings/<%= editList._id %>?_method=PUT">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" value="<%= editList.title %>" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="" value="<%= editList.description %>"
                            class="form-control"><%= editList.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Url</label>
                        <input type="text" name="listing[image.url]" value="<%= editList.image.url %>" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= editList.price %>"
                                class="form-control">
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" value="<%= editList.country %>"
                                class="form-control">
                        </div>
                    </div>
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= editList.location %>"
                            class="form-control">
                    </div>

                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
                </form>
            </div>
        </div>
        <br>
    </body>

    </html>