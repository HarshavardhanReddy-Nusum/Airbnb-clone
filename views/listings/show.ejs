<% layout("layouts/boilerplate") %>

        <div class="row mt-3">
            <div class="col-4 offset-3">

                <h3>Listing details</h3>
            </div>
                <div class="card col-6 offset-3">
                    <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top show-img">
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.title %> <br>
                            <%= listing.description %> <br>
                            <%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                            <%= listing.country %> <br>
                        </p>
                    </div>
                </div>

            <div class="btns mb-3">

                <a class="btn btn-dark col-1 offset-3" href="/listings/<%= listing._id %>/edit">Edit</a>
                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-2 edit-btn">Delete</button>
                </form>
            </div>
    </div>
    </html>